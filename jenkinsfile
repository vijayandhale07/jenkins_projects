pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/vijayandhale07/jenkins_projects.git'
            }
        }

        stage('Run Shell Script') {
            steps {
                sh '''
                    echo "Running deployment script..."
                    ./scripts/deploy.sh
                '''
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully ğŸ‰"
        }
        failure {
            echo "Pipeline failed âŒ"
        }
    }
}
